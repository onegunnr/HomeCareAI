<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="HomeCareAI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HomeCareAI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="HomeCareAI">

    <TabBar>
        <ShellContent Title="Tasks"
                      ContentTemplate="{DataTemplate views:TasksPage}" />
        <ShellContent Title="Logs"
                      ContentTemplate="{DataTemplate views:LogsPage}" />
        <ShellContent Title="Settings"
                      ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>